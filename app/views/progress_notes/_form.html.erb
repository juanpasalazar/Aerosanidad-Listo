<%= simple_form_for [@patient, @clinic_history, @progress_note], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :patient_name %>
  <%= f.input :patient_document %>
  <%= f.input :type_document %>
  <%= f.input :age %>
  <%= f.input :medical_record %>
  <%= f.input :description %>
  <%= f.hidden_field :clinic_history_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patient_clinic_history_progress_notes_path(@patient, @clinic_history, @progress_note), :class => 'btn btn-default' %>
<% end %>
