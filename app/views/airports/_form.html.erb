


<br/>

<div class="container-fluid">
    <div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Informaci√≥n para la Aeropuerto</h3>
        </div>
          <div class="panel-body">
            <%= simple_form_for(@airport, :remote => true) do |f| %>
                    <fieldset>
                <div class="form-group">
                  <label class='control-label new_blog'>Nombre:</label>                
                  <%= f.input :name,  placeholder: 'Campo Obligatorio', input_html: {class: "form-control new_blog"}, label: false,  :required => true %>

              </div>
  

                  <div class="form-group">
                  <label class='control-label new_blog'>Seleccionar un Departamento:</label>                
                  <%= f.input :department,
                      prompt:       'Campo Obligatorio',
                      collection: @airport.select_department.sort,
                      error: false, label: false, 
                      input_html:   {class: 'form-control'} %>  
                      </label>

              </div>



                  <div class="form-group">
                  <label class='control-label new_blog'>Seleccionar una Ciudad:</label>                
                        <%= f.collection_select :city_id, City.all, :id, :name, {prompt: "Campo Obligatorio"}, {class: "form-control"} %>

                      </label>

              </div>

              <%= f.submit "Guardar", :class => 'btn btn-primary pull-right' %>

            </fieldset>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>