

<style type="text/css">
@import url(http://fonts.googleapis.com/css?family=Pacifico);


.title {
  font-family: 'Pacifico';
  font-weight: norma;
  font-size: 40px;
  text-align: center;
  line-height: 1.4;
  color: #2980B9;
}







</style>






<div class="container-fluid">
  <div class="page-header">
    <h1 style="text-transform: capitalize;" class="title">Listado de  <span>Aeropuertos</span></h1>
  


  <%= form_tag request.path, :method => 'get', :class => '' do %>

<div id="page" class="middle">
  
  <div class="wrapper">
    <div class="table">
      
      <div class="table-cell-flex">
          <%= text_field_tag :search, params[:search], :placeholder => "Busca por el Nombre", :class => 'form-control' %>
      </div>
      
      <!-- random google image -->
      <div class="table-cell-fixed"> 
      <%= button_tag(type: "submit", class: "btn btn-link") do %>
        <i class="glyphicon glyphicon-search blanco"  style="font-size: 20px;"></i>
      <% end %>
      </div>
      
    </div>
  </div>
  
</div>
<% end %>




<div class="row" >
  <div class="col-xs-6 col-sm-6 col-md-6">
<%= link_to 'Nuevo Aeropuerto', new_arl_path, remote: true, :class => "btn btn-success color_blanco" %>
</div>
  <div class="col-xs-6 col-sm-6 col-md-6">
  <%= will_paginate @arles, renderer: BootstrapPagination::Rails %>
</div>

</div>





  </div>


<br/>






<table id="autoGeneratedID" role="grid" class="table table-striped table-bordered">
  
  <tr>
    <th>Eps #</th>
    <th>Nombre</th>
    <th>Opciones</th>
  </tr>
  
<% @airports.each do |airport| %>

  <tr>

    <td><%= airport.id %></td>
    <td> <%= best_in_place airport, :name, :ok_button => "Guardar", :ok_button_class => "btn btn-success", :cancel_button => 'Cerrar', :cancel_button_class => "btn btn-primary"  %></td>
    <td><%= link_to  image_tag('Crud/search.png', :title => "ver airport",:size => "30x30"), airport, :class => 'btn btn-link' %></td>


  </tr>
  
<% end %>

</table>





  
</div>

<style type="text/css">
  .table button.btn-danger {
  background-color: #661312;
  border-color: #661312;
}

.table button.btn-danger:hover {
  background-color: #912222;
  border-color: #912222;
}

button.btn:hover {
  text-decoration: underline;
}

.paginate_button a:hover,
.paginate_button.active a {
  text-decoration: underline;
}

.table-striped > tbody > tr:nth-of-type(2n+1) {
  background-color: #f0f0f0;
}

td:focus {
  outline: 1px solid #55ACEE;
}
/*Obfuscate all the things!*/
/*td:nth-of-type(-n+3):not(:focus){
  filter: blur(2px);
}*/
</style>

<script type="text/javascript">
  $('#autoGeneratedID').dataTable();
$('#autoGeneratedID td').attr('role', 'gridcell');
$('#autoGeneratedID td:nth-of-type(-n+3)').attr('contenteditable', 'true');
</script>